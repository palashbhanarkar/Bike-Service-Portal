
@{
    ViewBag.Title = "AddAddress";
}

<h2>Add Address</h2>

<link rel="stylesheet" type="text/css" href="../../Scripts/login/vendor/bootstrap/css/bootstrap.min.css" id="bootstrap-css">
<script src="../../Scripts/login/vendor/bootstrap/js/bootstrap.min.js"></script>
<script src="../../Scripts/login/vendor/jquery/jquery-3.2.1.min.js"></script>


<title>Sign up</title>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
<head>
    <style>
        body {
            background-color: #eee;
        }

        .container-fluid {
            padding: 50px;
        }

        .container {
            background-color: white;
            padding: 50px;
        }
    </style>
    <script src="jquery/jquery.min.js"></script>
   

    <link rel="stylesheet" href="css/bootstrap.min.css">
    

    <link rel="stylesheet" href="css/style.css">
    
    <script src="js/bootstrap.min.js"></script>
    

    <link rel="icon" href="images/icon.png" type="image/x-icon" />
    

</head>
<body>
    <form role="form" method="post">
        <div class="container-fluid">
            <div class="container">
                <h2 class="text-center" id="title">Add Address</h2>

                <hr>
                <div class="row">
                    <div class="col-md-5">

                        <fieldset>
                            <div class="form-group">

                                <input type="text" name="aptmnt_details" placeholder="Enter Apartment Details" data-validate="Apartment Details required"/>
                            </div>
                            <div class="form-group">
                                @*<input type="email" name="email" id="email" class="form-control input-lg" placeholder="Email Address">*@
                                <input type="text" name="street" placeholder="Enter Street" data-validate="Street is required" />
                            </div>
                            <div class="form-group">
                                @*<input type="password" name="password" id="password" class="form-control input-lg" placeholder="Password">*@
                                <input type="text" name="city" placeholder="Enter City" data-validate="City is required"/>
                            </div>

                            <div class="form-group">
                                @*<input type="password" name="password" id="password" class="form-control input-lg" placeholder="Password">*@
                                <input type="text" name="state" placeholder="Enter State" data-validate="State is required"/>
                            </div>

                            <div class="form-group">
                                @*<input type="password" name="password" id="password" class="form-control input-lg" placeholder="Password">*@
                                <input type="text" name="country" placeholder="Enter Country" data-validate="Country is required"/>
                            </div>
                            <div>
                                <input type="submit" class="btn btn-lg btn-primary" value="Add Address">
                            </div>
                        </fieldset>

                    </div>

                    
                </div>
            </div>

        </div>
    </form>
</body>

